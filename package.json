{
    "name": "yarn-workspace-example",
    "packageManager": "yarn@3.6.4",
    "scripts": {
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format": "prettier --write '**/*.{ts,tsx,json,js,jsx}'",
        "prepare": "husky"
    },
    "workspaces": [
        "apps/*",
        "shared/*"
    ],
    "devDependencies": {
        "@eslint/js": "^9.11.1",
        "eslint": "^9.11.1",
        "eslint-plugin-react": "^7.37.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.1.4",
        "globals": "^15.9.0",
        "husky": "^9.1.6",
        "prettier": "^3.3.3",
        "typescript-eslint": "^8.7.0"
    }
}
